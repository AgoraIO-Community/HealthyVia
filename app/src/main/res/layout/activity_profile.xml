<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_set_profile_talke" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="26.7dp"
        android:background="@drawable/set_profile_talke_profile_ract"
        android:gravity="center"
        android:orientation="vertical">


        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="+"
            android:textColor="#8d8d8d"
            android:textSize="25dp" />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add Image"
            android:textColor="#8d8d8d"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25.2dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:text="Name"
            android:textColor="#454545"
            android:textSize="16sp" />

        <customfonts.EditText_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/phone_no_ract"
            android:hint="Enter name"
            android:paddingLeft="11.7dp"
            android:paddingTop="14.7dp"
            android:paddingBottom="14.7dp"
            android:textColor="#8d8d8d"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="11.7dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#454545"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/sp_car_name"
                    android:layout_width="match_parent"
                    android:layout_height="49.8dp"
                    android:background="@drawable/set_profile_spinner_ract"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Birth of date"
                    android:textColor="#454545"
                    android:textSize="16sp" />


                <customfonts.EditText_Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_no_ract"
                    android:hint="dd/mm/yyyy"
                    android:paddingLeft="11.7dp"
                    android:paddingTop="14.7dp"
                    android:paddingBottom="14.7dp"
                    android:textColor="#8d8d8d"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>


        <customfonts.Button_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_signupbtn_ract"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15sp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>